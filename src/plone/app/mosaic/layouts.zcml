<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="plone"
    >

  <plone:static
      directory="layouts/site"
      name="default"
      type="sitelayout"
      zcml:condition="have mosaic-sitelayouts"
      />

  <plone:static
      directory="layouts/content"
      name="default"
      type="contentlayout"
      />

</configure>
